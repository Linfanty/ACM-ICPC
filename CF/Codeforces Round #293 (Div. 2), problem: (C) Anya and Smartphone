{
 cin>>ar[i];
 ps[ar[i]]=i;
}

for (int i=1;i<=m;i++)
{
 cin>>id;
 ans+=(ps[id]-1)/k+1;
 long a=ps[id];
 long b=ps[id]-1;
 if (b==0)continue;
 swap(ar[a],ar[b]);
 ps[ar[a]]=a;
 ps[ar[b]]=b;
/* for (int j=1;j<=n;j++)
