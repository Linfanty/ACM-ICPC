/*    W        w w         w        m  m        m  m          222        22              7777    */
/*    w        w w         w        m  m        m  m                     22              777     */
/*     w      w   w       w        m    m      m    m                    22              77      */
/*     w      w    w      w        m    m      m    m                 222                77      */
/*      w    w      w    w        m      m    m      m              222                  77      */
/*      w    w      w    w        m      m    m      m            222                    77      */
/*       w  w        w  w        m        m  m        m         222                      77      */
/*       w  w        w  w        m        m  m        m      222                         77      */
/*        ww          ww        m          mm          m     222222222222222             77      */

//#pragma comment(linker, "/STACK:102400000,102400000")

#include<iostream>
#include<cstdio>
#include<algorithm>
#include<cmath>
#include<set>

using namespace std;

int n;
multiset<int>S;
int main()
{
  #ifdef ONLINE_JUDGE
  #else
    freopen("test.in","r",stdin);
  #endif
  while(~scanf("%d",&n))
  {
    S.clear();
    long long ans=1;
    int op,x;
    for(int i=1;i<=n;i++)
    {
      scanf("%d",&op);
      if(op==1)
      {
        scanf("%d",&x);
        S.insert(x);
      }
      else
      {
        while(!S.empty()&&*S.begin()<=ans)
        {
          ans+=*S.begin();
          S.erase(S.begin());
        }
        printf("%lld\n",ans);
      }
    }
  }
  return 0;
}
